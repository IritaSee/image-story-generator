# Flask Configuration
SECRET_KEY=your-secret-key-change-this
FLASK_ENV=development

# File Upload Limits
MAX_CONTENT_LENGTH=5242880  # 5MB in bytes
MAX_IMAGES_PER_REQUEST=10
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp

# API Timeouts
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Note: Users will provide their own API keys through the frontend (BYOK approach)
# The backend accepts keys in request headers
